{
  "name": "userscripts-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Userscripts monorepo",
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "build": "turbo run build",
    "build:bili": "turbo run build --filter=@us/bili-quickcopy",
    "build:douyin": "turbo run build --filter=@us/douyin-quickcopy",
    "bump:meta": "node .github/scripts/bump-meta-version.mjs",
    "dev:bili": "turbo run dev --filter=@us/bili-quickcopy",
    "dev:douyin": "turbo run dev --filter=@us/douyin-quickcopy",
    "typecheck": "turbo run typecheck",
    "typecheck:bili": "turbo run typecheck --filter=@us/bili-quickcopy",
    "typecheck:douyin": "turbo run typecheck --filter=@us/douyin-quickcopy",
    "clean": "turbo run clean && rimraf .turbo dist"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/tampermonkey": "^5.0.5",
    "rimraf": "^6.1.3",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
